<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.Fragments.DashBoard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loginStatusBar">

        <TextView
            android:id="@+id/title_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="Dashboard"
            android:textColor="#000"
            android:textSize="23dp"
            android:textStyle="bold" />

        <include
            layout="@layout/fragment_dash_board_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/title_fragment"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <android.support.design.card.MaterialCardView
            android:layout_width="80dp"

            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="31dp"
            app:cardBackgroundColor="#149ff5"
            app:cardCornerRadius="7dp"
            app:cardElevation="0dp"
            app:strokeColor="#919191"
            app:strokeWidth="0.1dp"></android.support.design.card.MaterialCardView>
    </RelativeLayout>


</FrameLayout>