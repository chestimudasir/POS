<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.Fragments.DashBoard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loginStatusBar">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/title_fragment"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"/>

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:id="@+id/tablayout_dashboard"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            app:tabBackground="@android:color/transparent"
            app:tabIndicatorColor="#000"
            app:tabIndicatorFullWidth="false"
            app:tabSelectedTextColor="#000"
            android:layout_marginTop="5dp"
            app:tabMode="fixed"
            android:layout_below="@+id/title_fragment" />

        <android.support.v4.view.ViewPager
            android:layout_below="@+id/tablayout_dashboard"
            android:layout_width="match_parent"
            android:id="@+id/viewpager_dash"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent" />

    </RelativeLayout>


</FrameLayout>