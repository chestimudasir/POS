<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cardview_light_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Activities.SetUp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:id="@+id/greetings"
        android:layout_marginTop="34dp"
        android:text="Let's get started..."

        android:textColor="@color/cardview_dark_background"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"

        android:layout_below="@+id/greetings"
        android:layout_height="1000dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp">
            <android.support.v7.widget.CardView
                app:cardCornerRadius="0dp"
                android:id="@+id/card2"
                android:layout_marginTop="20dp"
                app:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:id="@+id/setup"
                        android:layout_alignParentTop="true"
                        android:textSize="17dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="22dp"
                        android:text="Set Up Your admin Password"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/setup"
                        android:layout_marginTop="58dp"
                        android:layout_marginRight="20dp"
                        android:text="Set up your admin password to get more indepth access to your data , analytics , trending items  and sales" />

                    <EditText
                        android:id="@+id/admin_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/setup"
                        android:layout_marginBottom="38dp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:hint="Write something tricky !"
                        android:inputType="textPassword" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@+id/card2"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/setupcard2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="22dp"
                        android:text="How many Tables at your Restaurant / Cafe ?  "
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textcard2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/setupcard2"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="66dp"
                        android:text="Set up your admin password to get more indepth access to your data , analytics , trending items  and sales" />

                    <EditText
                        android:id="@+id/num_tables"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/setupcard2"
                        android:layout_marginBottom="22dp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:hint="How many Tables ?"
                        android:inputType="number" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>


    <android.support.v7.widget.CardView
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#93a7fd">


            <TextView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="Next"
                android:textColor="@color/cardview_light_background"
                android:textSize="17dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>