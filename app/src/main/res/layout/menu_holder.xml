<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/name_of_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="17dp"
                android:text="General"
                android:textColor="@color/cardview_dark_background"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView26"
                android:background="?selectableItemBackground"
                android:text="More items"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold" />

            <TextView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name_of_item"
                android:layout_below="@+id/name_of_item"
                android:text="General category hosts your everyday menu. Contains all items that you have added category wise" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>