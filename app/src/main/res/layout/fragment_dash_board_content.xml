<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.Fragments.DashBoardContent">
    <ScrollView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/tablayout_dashboard"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/c1"
                android:layout_width="match_parent"
                app:strokeWidth="0.1dp"
                app:strokeColor="#919191"
                android:layout_height="150dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="7dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView37">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:text="Today"
                        android:textColor="#000"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/sales_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/today"
                        android:layout_marginTop="42dp"
                        android:text="$530.10"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/sales_today"
                        android:layout_marginBottom="14dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/sales_today"
                        android:text="+50%"
                        android:textColor="#4a962e" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="44dp"
                        android:layout_marginStart="21dp"
                        android:text="Last Week"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/textView33"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView10"
                        android:layout_below="@+id/textView10"
                        android:layout_marginTop="-39dp"
                        android:text="TextView"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/textView10"
                        android:layout_marginEnd="19dp"
                        android:text="$321"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView35"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView34"
                        android:layout_alignTop="@+id/textView33"
                        android:text="$421"

                        android:textColor="#000"
                        android:textStyle="bold" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_alignStart="@+id/c1"
                android:layout_below="@+id/c1"
                android:text="Best Sellers"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView36"
                android:layout_marginTop="11dp"
                android:text="Sales"
                android:textColor="#000" />


        </RelativeLayout>
    </ScrollView>
</FrameLayout>